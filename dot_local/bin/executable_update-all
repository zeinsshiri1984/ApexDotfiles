#!/bin/bash
set -e

# 定义颜色
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

ROOT_MOUNT_OPTS="$(findmnt -no OPTIONS / 2>/dev/null || true)"
ROOT_IS_RO="false"
if echo "$ROOT_MOUNT_OPTS" | grep -qE '(^|,)ro(,|$)'; then
    ROOT_IS_RO="true"
fi
IS_WSL="false"
if [ -n "${WSL_DISTRO_NAME-}" ] || grep -qi microsoft /proc/version 2>/dev/null; then
    IS_WSL="true"
fi

echo -e "${BLUE}🚀 [1/5] 更新 Chezmoi 配置源...${NC}"
chezmoi update --apply

echo -e "${BLUE}📦 [2/5] 更新 Devbox 全局包...${NC}"
if devbox global list >/dev/null 2>&1; then
    devbox global update
    devbox global pull # 确保镜像也是新的
fi

echo -e "${BLUE}🐚 [3/5] 更新 Zsh 插件 (Sheldon)...${NC}"
if command -v sheldon &> /dev/null; then
    sheldon lock --update
fi

echo -e "${BLUE}🐳 [4/5] 深度清理 Docker/Podman...${NC}"
if command -v podman &> /dev/null; then
    # Podman 的清理
    podman system prune -a -f --volumes # -a: 清理未使用的镜像而不仅仅是悬空的
elif command -v docker &> /dev/null; then
    # Docker 的清理
    docker system prune -a -f --volumes
fi

echo -e "${BLUE}♻️  [5/5] 最终垃圾回收...${NC}"
if command -v trash-empty &> /dev/null; then
    echo "   -> 清理 7 天前的回收站文件..."
    trash-empty 7 
fi

echo "   -> 清理语言缓存..."
go clean -modcache 2>/dev/null || true
npm cache clean --force 2>/dev/null || true
yarn cache clean 2>/dev/null || true

echo -e "${BLUE}🧹 [5/5] 清理系统孤儿包与垃圾...${NC}"
if [ "$ROOT_IS_RO" = "true" ] || [ "$IS_WSL" = "true" ]; then
    echo "   -> 跳过系统级清理"
else
    if [ -f /etc/debian_version ] && command -v apt-get &>/dev/null; then
        echo "   -> [APT] 移除系统级孤儿依赖..."
        sudo apt-get autoremove -y
        sudo apt-get clean
    elif [ -f /etc/fedora-release ] && command -v dnf &>/dev/null; then
        echo "   -> [DNF] 移除系统级孤儿依赖..."
        sudo dnf autoremove -y
        sudo dnf clean all
    elif [ -f /etc/arch-release ] && command -v pacman &>/dev/null; then
        if pacman -Qdtq >/dev/null 2>&1; then
            echo "   -> [Pacman] 移除孤儿依赖..."
            sudo pacman -Rns $(pacman -Qdtq) --noconfirm
        else
            echo "   -> [Pacman] 无孤儿包，跳过。"
        fi
    fi
fi

echo -e "${GREEN}✅ 系统焕然一新！${NC}"
