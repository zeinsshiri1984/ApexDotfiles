[chezmoi]
sourceDir = "{{ .chezmoi.sourceDir }}"

# 交互式输入 (仅在首次初始化时询问)
{{- $email := promptStringOnce . "email" "Git Email address" -}}
{{- $name := promptStringOnce . "name" "Git Username" -}}

[data]
    email = "{{ $email }}"
    name = "{{ $name }}"

# 开启 Diff 比较时的颜色与分页
[diff]
    command = "delta"
    pager = "delta"
    
# 合并冲突解决
[merge]
    command = "hx" 

# 默认编辑器
[edit]
    command = "hx"