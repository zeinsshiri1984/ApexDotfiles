{
  "packages": [
    "rustc@latest",
    "cargo@latest",
    "clippy@latest",
    "bacon@latest",
    "pkg-config@latest",
    "openssl@latest"
  ],
  "env": {
    "RUST_SRC_PATH": "$DEVBOX_PACKAGES_DIR/rustc/lib/rustlib/src/rust/library"
  },
  "shell": {
    "init_hook": [
      "# 自动恢复 lefthook 钩子 (如果是刚 clone 下来)",
      "lefthook install > /dev/null 2>&1 || true",
      "git config core.hooksPath .githooks"
    ],
    "scripts": {
      "build": "cargo build --release",
      "test": "cargo test",
      "watch": "bacon"
    }
  }
}