set shell := ["bash", "-eu", "-o", "pipefail", "-c"]
set dotenv-load := false

default:
    @just --list

bootstrap:
    ./scripts/bootstrap.sh

tools:
    brew bundle --no-lock --file=Brewfile

setup:
    mise install

doctor:
    mise doctor
    brew doctor || true

clean:
    mise uninstall --all || true
    brew bundle cleanup --force || true
