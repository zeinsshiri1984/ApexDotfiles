[tools]
# Runtime (宿主机全局)
node = "lts"
python = "latest"
go = "latest"
rust = "latest"

# Python 生态
"pipx:copier" = "latest"
"pipx:shell-gpt" = "latest"
# (可选，首次可跳过，后期运行: mise use pipx:aider-chat ubi:SilasMarvin/lsp-ai)
# "pipx:aider-chat" = "latest"

# Node 生态
"npm:@anthropic-ai/claude-code" = "latest"
"npm:@openai/codex" = "latest"

# AI 辅助 (可选，需要 GitHub API，后期运行: mise use ubi:SilasMarvin/lsp-ai)
# "ubi:SilasMarvin/lsp-ai" = "latest"

[settings]
pipx.uvx = true
auto_install = false
legacy_version_file = false
activate_aggressive = false  # 明确行为，避免隐式 hook
trusted_config_paths = ["~/.config/mise"]
