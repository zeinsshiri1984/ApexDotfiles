[preview]
tab_size        = 2
max_width       = 1000
max_height      = 1000
cache_dir       = "~/.cache/yazi"
image_filter    = "lanczos3" # 桌面环境用高质量算法
image_quality   = 80
sixel_fraction  = 15
ueberzug_scale  = 1
ueberzug_offset = [ 0, 0, 0, 0 ]
image_preview   = true    # 开启图片预览
max_items      = 200         # 目录文件过多时只预加载部分
image_delay    = 30          # 毫秒，快速滚动时不渲染图片，极大提升流畅度

[plugin]
# 强制屏蔽 git fetcher，防止后台扫描大仓库导致卡顿
fetchers = [
  { id = "git", name = "*", run = "noop" },
  { id = "git_status", name = "*", run = "noop" }
]

# 引入共享部分
{{ template "yazi_shared.toml" . }}